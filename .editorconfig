root = true

[*]
charset=utf - 8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
indent_style = tab
indent_size = 4
end_of_line = lf

[*.{js,jsx}]
indent_style = tab
end_of_line = lf
spaces_within_imports = true
indent_size = 2

[*.{css,pcss}]
indent_style = tab
end_of_line = lf
indent_size = 4

[*.{json,yml}]
indent_style = space
indent_size = 2
