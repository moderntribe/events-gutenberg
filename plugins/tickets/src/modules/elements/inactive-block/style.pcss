.tribe-editor__inactive-block {
	display: flex;
	align-items: center;
	background-color: #F7F8F9;
}

.tribe-editor__inactive-block__icon {
	flex: none;

	.tribe-editor__inactive-block--rsvp & {
		width: 100px;
		padding: 25px 20px 20px;
	}

	.tribe-editor__inactive-block--ticket & {
		width: 68px;
		padding: 25px 0 25px 12px;
	}
}

.tribe-editor__inactive-block__content {
	flex: auto;

	.tribe-editor__inactive-block--rsvp & {
		padding: 25px;
	}

	.tribe-editor__inactive-block--ticket & {
		padding: 30px 25px 30px 20px;
	}
}

.tribe-editor__inactive-block__title {
	color: #545D66;
	font-family: Helvetica, sans-serif, arial;
	font-size: 21px;
	font-weight: bold;
	line-height: 25px;
	letter-spacing: 0.16px;
	margin: 0 0 12px;
}

p.tribe-editor__inactive-block__description {
	color: #545D66;
	font-family: Helvetica, sans-serif, arial;
	font-size: 14px;
	line-height: 18px;
	letter-spacing: 0.04px;
	margin: 0;
}
