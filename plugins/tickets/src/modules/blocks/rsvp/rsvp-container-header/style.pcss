.tribe-editor__container-panel__right-section-header {

	.tribe-editor__rsvp & {
		display: flex;
		align-items: center;
	}
}

.tribe-editor__rsvp-container-header__header-details {
	flex: auto;
}

.tribe-editor__rsvp-container-header__title {
	color: #000000;
	margin: 0;
	padding-top: 3px;
	font-weight: bold;
	font-size: 21px;
	line-height: 25px;
	letter-spacing: 0.16px;
}

.tribe-editor__rsvp-container-header__description {
	display: block;
	color: #545D66;
	padding-top: 7px;
	font-size: 12px;
	line-height: 18px;
	letter-spacing: 0.04px;
}

.tribe-editor__rsvp-container-header__capacity-label {
	display: flex;
	color: #545D66;
	padding-top: 15px;
	line-height: 18px;
}

.tribe-editor__numeric-label--count {

	.tribe-editor__rsvp-container-header__capacity-label & {
		flex: none;
		font-weight: bold;
		font-size: 18px;
		letter-spacing: 0.05px;
	}
}

.tribe-editor__numeric-label--after {

	.tribe-editor__rsvp-container-header__capacity-label & {
		flex: none;
		margin-left: 2px;
		font-size: 12px;
		letter-spacing: 0.04px;
		white-space: pre;
	}
}

.tribe-editor__rsvp-container-header__counters {
	flex: none;
}
