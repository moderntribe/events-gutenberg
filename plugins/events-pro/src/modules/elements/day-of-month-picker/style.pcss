.tribe-editor__day-of-month-picker {
	display: flex;
	align-items: center;

	& > span {
		font-size: 16px;
		line-height: 24px;
		color: #8D949B;
	}

	& > * {
		flex: none;
		margin-right: 15px;

		&:last-child {
			margin-right: 0;
		}
	}
}

.tribe-editor__day-of-month-picker__day-of-month-select {
	width: 105px;
}

.tribe-editor__day-of-month-picker__week-day-select {
	width: 130px;
}

